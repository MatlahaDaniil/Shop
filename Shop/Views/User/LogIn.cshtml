@model UserModel
@{
    ViewData["Title"] = "Авторизація";
}
    <link rel="stylesheet" href="~/css/StylesForRegAndLogForms.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />

<body>
    <div class="container">
        <div class="wrapper">
            <div class="title"><span>Авторизація</span></div>
            <form method="post" asp-controller="User" asp-action="CheckAuthorization">
                <div class="row">
                    <i>@@</i>
                    <input type="text" asp-for="email" placeholder="Введіть пошту" required>
                </div>
                <div class="row">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="password" placeholder="Вевдіть пароль" required>
                </div>
                <div class="row button">
                    <input type="submit" value="Увійти">
                </div>
                <div class="signup-link">Не зареєстровані? <a href="Registration">Зареєструватися</a></div>
            </form>
        </div>
    </div>
</body>
